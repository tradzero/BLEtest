<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="184dp"
            android:layout_marginTop="328dp"
            android:text="@string/title_home"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nav_view" app:layout_constraintVertical_bias="0.0"/>


    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    <Button
            android:text="匹配"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/message" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="开始"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startBtn" app:layout_constraintEnd_toStartOf="@+id/endBtn"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="496dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="73dp"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.017"/>
    <Button
            android:text="结束"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endBtn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="497dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="73dp"/>

</android.support.constraint.ConstraintLayout>